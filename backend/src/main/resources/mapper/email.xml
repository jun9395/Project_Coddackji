<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.codackji.model.mapper.EmailMapper">
	
	<update id="updateCertification" parameterType="String">
		update user
		set certification = true
		where email = #{email}
	</update>
	
</mapper>